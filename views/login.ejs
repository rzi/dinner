<head>
  <%- include('../views/head.ejs'); %>
  <title>Logowanie</title>
</head>

<body>
  <%- include('../views/hamburger.ejs'); %>
  
    <form action="login" method="post" name="Login_Form" class="form-signin">
      <h3 class="form-signin-heading">Logowanie</h3>

      <input
        type="text"
        class="form-control"
        name="email"
        placeholder="adres email"
        required=""
        autofocus=""
      />
      <input
        type="password"
        class="form-control"
        name="password"
        placeholder="hasło"
        required=""
      />
      <br />
      <label
        ><input type="checkbox" name="manager" /> Zarządzanie resteuracją</label
      >
      <br /><br />
      <button
        class="btn btn-lg btn-primary btn-block"
        name="Submit"
        value="Login"
        type="Submit"
      >
        Login
      </button>
      <br /><br />
      <label>nie masz konta, <a href="register">zarejestruj się</a></label>
      <br />
      <p id="message" class="form-message" style="color: red;"><%= message %></p>
    </form>
    <script src="/public/main.js"></script>
  </body>
</html>
